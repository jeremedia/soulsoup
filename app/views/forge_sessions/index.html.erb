<%= turbo_stream_from "forge_sessions" %>

<div class="header-section">
  <h1>Forge Sessions</h1>
  <div class="actions">
    <%= link_to "New Session", new_forge_session_path, class: "btn btn-primary" %>
  </div>
</div>

<div class="forge-sessions-grid">
  <div class="sessions-section">
    <h2>Active Sessions</h2>
    <div id="active_sessions" class="sessions-list">
      <% @active_sessions.each do |session| %>
        <%= render "session_row", session: session %>
      <% end %>
      <% if @active_sessions.empty? %>
        <p class="empty-state">No active sessions</p>
      <% end %>
    </div>
  </div>
  
  <div class="sessions-section">
    <h2>Recent Completed Sessions</h2>
    <div id="completed_sessions" class="sessions-list">
      <% @completed_sessions.limit(10).each do |session| %>
        <%= render "session_row", session: session %>
      <% end %>
      <% if @completed_sessions.empty? %>
        <p class="empty-state">No completed sessions</p>
      <% end %>
    </div>
  </div>
</div>

<style>
.forge-sessions-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 2rem;
  margin-top: 2rem;
}

.sessions-section h2 {
  color: #0f0;
  text-transform: uppercase;
  font-size: 1.2rem;
  margin-bottom: 1rem;
  border-bottom: 1px solid #0f0;
  padding-bottom: 0.5rem;
}

.sessions-list {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.empty-state {
  color: #666;
  font-style: italic;
  text-align: center;
  padding: 2rem;
}

.header-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 2rem;
}

.actions .btn {
  background: #0f0;
  color: #000;
  padding: 0.5rem 1rem;
  text-decoration: none;
  border-radius: 3px;
  text-transform: uppercase;
  font-weight: bold;
}

.actions .btn:hover {
  background: #0c0;
}
</style>